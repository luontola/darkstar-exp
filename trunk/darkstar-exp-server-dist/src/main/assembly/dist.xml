<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">

    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>

        <!-- Libraries -->
        <dependencySet>
            <excludes>
                <exclude>berkeleydb:bdb-natives</exclude>
                <exclude>net.orfjackal.darkstar-exp:darkstar-server-tutorial</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>

        <!-- Berkeley DB natives -->
        <dependencySet>
            <includes>
                <include>berkeleydb:bdb-natives</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <!--<outputFileNameMapping>bdb</outputFileNameMapping>-->
            <unpack>true</unpack>
        </dependencySet>

        <!-- Tutorials -->
        <dependencySet>
            <includes>
                <include>net.orfjackal.darkstar-exp:darkstar-server-tutorial</include>
            </includes>
            <outputDirectory>tutorial</outputDirectory>
        </dependencySet>

    </dependencySets>

    <files>

        <!-- Startup files / Project Darkstar -->
        <file>
            <source>../darkstar-server/src/main/config/sgs-logging.properties</source>
            <destName>darkstar-logging.properties</destName>
        </file>

    </files>

    <fileSets>

        <!-- Startup files / Darkstar EXP -->
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>src/main/config</directory>
        </fileSet>

        <!-- Documentation -->
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>..</directory>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>../darkstar-server</directory>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <!-- TODO: not yet working
        <fileSet>
            <outputDirectory>doc/darkstar-server-api</outputDirectory>
            <directory>../darkstar-server/target/site/apidocs</directory>
        </fileSet>
        -->

        <!-- Tutorials -->
        <fileSet>
            <outputDirectory>tutorial/src</outputDirectory>
            <directory>../darkstar-server-tutorial/src/main/java</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>tutorial</outputDirectory>
            <directory>../darkstar-server-tutorial/src/main/config</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>tutorial</outputDirectory>
            <directory>../darkstar-server-tutorial/src/main/docs</directory>
            <includes>
                <include>*.pdf</include>
            </includes>
        </fileSet>

    </fileSets>

</assembly>
